---
// Sección Cómo Funciona - 4 pasos
const pasos = [
  { numero: '1', titulo: 'Envíanos una foto', descripcion: 'Por WhatsApp, mándanos una foto del daño.' },
  { numero: '2', titulo: 'Cotización inmediata', descripcion: 'Te respondemos en minutos con el precio exacto.' },
  { numero: '3', titulo: 'Agendamos visita', descripcion: 'Coordinamos hora y lugar que te acomode.' },
  { numero: '4', titulo: 'Reparación express', descripcion: 'Nuestro técnico repara en el lugar.' }
];
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">¿Cómo funciona?</h2>
      <p class="text-lg text-gray-600">4 simples pasos para reparar tu parabrisas</p>
    </div>
    <div class="grid md:grid-cols-4 gap-8 max-w-5xl mx-auto">
      {pasos.map((paso) => (
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
            {paso.numero}
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{paso.titulo}</h3>
          <p class="text-gray-600 text-sm">{paso.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>